<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Drill.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Drill.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
                                
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <Style
            x:Key="SettingsSectionHeaderTextBlockStyle"
            BasedOn="{StaticResource BodyStrongTextBlockStyle}"
            TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="RootGrid"
          MaxWidth="1064">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <TextBlock x:ConnectionId='3' x:Name="PageHeader"
                   Margin="36,24,36,0"
                   AutomationProperties.HeadingLevel="Level1"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Text="설정" />
        <ScrollView Grid.Row="1" Padding="36,0,36,0"
                    VerticalScrollBarVisibility="Auto"
                    VerticalScrollMode="Auto">
            <Border>
                <StackPanel Spacing="{StaticResource SettingsCardSpacing}">
                    <StackPanel.ChildrenTransitions>
                        <RepositionThemeTransition />
                    </StackPanel.ChildrenTransitions>
                    <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="테마 설정" />
                    <toolkit:SettingsCard Description="프로그램 테마를 바꿔보세요" Header="테마">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE790;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox x:ConnectionId='4' x:Name="themeMode"
                                  AutomationProperties.AutomationId="themeModeComboBox"
                                                                               >
                            <ComboBoxItem Content="밝게" Tag="Light" />
                            <ComboBoxItem Content="어둡게" Tag="Dark" />
                            <ComboBoxItem Content="시스템 설정을 따름" Tag="Default" />
                        </ComboBox>
                    </toolkit:SettingsCard>
                    <!--<toolkit:SettingsCard Description="프로그램 재질을 바꿔보세요" Header="테마">
                        <toolkit:SettingsCard.HeaderIcon>
                            <FontIcon Glyph="&#xE790;" />
                        </toolkit:SettingsCard.HeaderIcon>
                        <ComboBox x:Name="materialMode"
                                  AutomationProperties.AutomationId="materialModeComboBox"
                                  SelectionChanged="materialMode_SelectionChanged">
                            <ComboBoxItem Content="미카" Tag="Light" />
                            <ComboBoxItem Content="아크릴" Tag="Dark" />
                            <ComboBoxItem Content="시스템 설정" Tag="Default" />
                        </ComboBox>
                    </toolkit:SettingsCard>-->
                </StackPanel>
            </Border>
        </ScrollView>
    </Grid>
</Page>

