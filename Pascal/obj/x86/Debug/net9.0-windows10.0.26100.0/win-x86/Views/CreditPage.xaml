<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Pascal.Views.CreditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pascal.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
    의사가 말했다. "죽을 병입니다."
    나는 말했다. "그럼 어떻게 해야 하지요?"
    의사가 말했다. "그냥 죽으세요."
    - 김수영, '죽음'
    -->

    <Page.Resources>
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <Style x:Key="SettingsSectionHeaderTextBlockStyle"
               BasedOn="{StaticResource BodyStrongTextBlockStyle}"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="ContentArea" MaxWidth="1064">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:ConnectionId='3' x:Name="PageHeader"
               Margin="36,24,36,0"
               AutomationProperties.HeadingLevel="Level1"
               Style="{StaticResource TitleTextBlockStyle}"
               Text="크레딧" />

        <ScrollView Margin="{ThemeResource ContentPageMargin}"
                    Padding="{ThemeResource ContentPagePadding}"
                    VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10"
                        dev:PanelAttach.ChildrenTransitions="Default"
                        Spacing="5">
                
                <dev:SettingsCard>
                    <dev:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <PersonPicture ProfilePicture="/Assets/Avatars/gabin.png"
                           Width="40" Height="40" />
                            <TextBlock Text="din-c" VerticalAlignment="Center" />
                        </StackPanel>
                    </dev:SettingsCard.Header>
                    <TextBlock Text="피드백은 받지 않겠습니다. 감사합니다." />
                </dev:SettingsCard>

                <dev:SettingsCard>
                    <dev:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <PersonPicture ProfilePicture="/Assets/Avatars/thyun.png"
                               Width="40" Height="40" />
                            <TextBlock Text="hyngng" VerticalAlignment="Center" />
                        </StackPanel>
                    </dev:SettingsCard.Header>
                    <TextBlock Text="추가하고 싶은 기능이 있다면 언제든지 마음 속으로 말씀해주세요. " />
                </dev:SettingsCard>



                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="기술스택" />
                <dev:SettingsCard Header="Windows Community Toolkit" Description="MIT License. UI 컨트롤 및 헬퍼 라이브러리.">
                    <dev:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8A1;" />
                    </dev:SettingsCard.HeaderIcon>
                    <HyperlinkButton Content="자세히 보기" NavigateUri="https://github.com/CommunityToolkit/WindowsCommunityToolkit"/>
                </dev:SettingsCard>

                <dev:SettingsCard Header="Newtonsoft.Json" Description="MIT License. JSON 직렬화 라이브러리.">
                    <dev:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF16B;" />
                    </dev:SettingsCard.HeaderIcon>
                    <HyperlinkButton Content="자세히 보기" NavigateUri="https://www.newtonsoft.com/json"/>
                </dev:SettingsCard>

                

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="오픈소스 라이브러리" />
                <dev:SettingsCard Header="Windows Community Toolkit" Description="MIT License. UI 컨트롤 및 헬퍼 라이브러리.">
                    <dev:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE8A1;" />
                    </dev:SettingsCard.HeaderIcon>
                    <HyperlinkButton Content="자세히 보기" NavigateUri="https://github.com/CommunityToolkit/WindowsCommunityToolkit"/>
                </dev:SettingsCard>

                <dev:SettingsCard Header="Newtonsoft.Json" Description="MIT License. JSON 직렬화 라이브러리.">
                    <dev:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xF16B;" />
                    </dev:SettingsCard.HeaderIcon>
                    <HyperlinkButton Content="자세히 보기" NavigateUri="https://www.newtonsoft.com/json"/>
                </dev:SettingsCard>

            </StackPanel>
        </ScrollView>

