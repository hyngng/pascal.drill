<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Pascal.Views.CreditPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pascal.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!--
    의사가 말했다. "죽을 병입니다."
    나는 말했다. "그럼 어떻게 해야 하지요?"
    의사가 말했다. "그냥 죽으세요."
    - 김수영, '죽음'
    -->

    <Page.Resources>
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <Style x:Key="SettingsSectionHeaderTextBlockStyle"
               BasedOn="{StaticResource BodyStrongTextBlockStyle}"
               TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <Grid x:ConnectionId='2' x:Name="ContentArea" MaxWidth="1064">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel dev:PanelAttach.ChildrenTransitions="Default" Spacing="12">
            <TextBlock x:ConnectionId='3' x:Name="PageHeader"
                       Margin="{ThemeResource PageHeaderMargin}"
                       Padding="{ThemeResource PageHeaderPadding}"
                       Style="{StaticResource TitleTextBlockStyle}"
                       AutomationProperties.HeadingLevel="Level1"
                       Text="크레딧" />

            <TextBlock x:ConnectionId='4' x:Name="PageDescription"
                       Margin="{ThemeResource PageDescriptionMargin}"
                       Padding="{ThemeResource PageDescriptionPadding}"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       AutomationProperties.HeadingLevel="Level1"
                       Text="이 앱을 만든 사람들, 기술 스택, 오픈소스를 소개합니다." />
        </StackPanel>

        <ScrollView  VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel dev:PanelAttach.ChildrenTransitions="Default" Spacing="5"
                        Margin="{ThemeResource PageContentMargin}"
                        Padding="{ThemeResource PageContentPadding}">

                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="만든 이" Margin="1,0,0,6" />

                <dev:SettingsCard>
                    <dev:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <PersonPicture ProfilePicture="/Assets/Avatars/gabin.png"
                                           Width="40" Height="40" />
                            <TextBlock Text="din-c" VerticalAlignment="Center" />
                        </StackPanel>
                    </dev:SettingsCard.Header>
                    <TextBlock Text="피드백은 받지 않겠습니다. 감사합니다." />
                </dev:SettingsCard>

                <dev:SettingsCard>
                    <dev:SettingsCard.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                            <PersonPicture ProfilePicture="/Assets/Avatars/thyun.png"
                                           Width="40" Height="40" />
                            <TextBlock Text="hyngng" VerticalAlignment="Center" />
                        </StackPanel>
                    </dev:SettingsCard.Header>
                    <TextBlock Text="추가하고 싶은 기능이 있다면 언제든지 텔레파시로 알려주세요." />
                </dev:SettingsCard>


                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="기술 스택" />

                <dev:SettingsExpander Description="사실 대부분은 이번에 처음 알게 되었습니다."
                                      Header="컴퓨터 언어"> <!--HeaderIcon="{dev:BitmapIcon Source=Assets/icon.png}"-->
                    <dev:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xe756;" />
                    </dev:SettingsExpander.HeaderIcon>

                    <dev:SettingsExpander.Items>
                        <dev:SettingsCard Header="XAML" Description="이걸로 온갖 문서를 찾아보면서 틀을 만들고" />
                        <dev:SettingsCard Header="C#" Description="이걸로 대부분의 기능을 만들었습니다." />
                    </dev:SettingsExpander.Items>
                </dev:SettingsExpander>

                <dev:SettingsExpander Description="세상에 이런게 존재하는줄도 몰랐습니다."
                      Header="프레임워크">
                    <dev:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xe95f;" />
                    </dev:SettingsExpander.HeaderIcon>

                    <dev:SettingsExpander.Items>
                        <dev:SettingsCard Header="WinUI 3" Description="마이크로소프트가 관리하는 Windows 데스크톱 앱 네이티브 UI 프레임워크지만 아무도 안 씁니다. 나 빼고." />
                        <dev:SettingsCard Header="Windows App SDK" Description="최신 Windows 기능을 일관된 API로 제공하는 SDK입니다. 체감은 안 되지만 유용했습니다." />
                    </dev:SettingsExpander.Items>
                </dev:SettingsExpander>


                <TextBlock Style="{StaticResource SettingsSectionHeaderTextBlockStyle}" Text="오픈소스 라이브러리" />

                <dev:SettingsCard Header="DevWinUI" Description="이란계 개발자가 관리하는 WinUI 3용 확장 라이브러리입니다. 마이크로소프트보다 낫습니다.">
                    <dev:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xe8f1;" />
                    </dev:SettingsCard.HeaderIcon>
                    <HyperlinkButton Content="자세히 보기" NavigateUri="https://github.com/ghost1372/DevWinUI"/>
                </dev:SettingsCard>

            </StackPanel>
        </ScrollView>

