                <ImageIcon Width="16"
                           Height="16"
                           Margin="2,0,14,0"
                           Source="ms-appx:///Assets/AppIcon.png" />
            </TitleBar.LeftHeader>
            <!--<TitleBar.RightHeader>
                <Button x:Name="ThemeButton"
                        Height="32"
                        Margin="0,0,4,0"
                        Click="ThemeButton_Click"
                        Content="{dev:FontIcon GlyphCode=E793,
                                               FontSize=16}"
                        Style="{ThemeResource SubtleButtonStyle}"
                        ToolTipService.ToolTip="Toggle Theme" />
            </TitleBar.RightHeader>-->
        </TitleBar>
        <NavigationView x:ConnectionId='3' x:Name="NavView"
                        Grid.Row="1"
                        IsBackButtonVisible="Collapsed"
                        IsPaneToggleButtonVisible="False">
            <NavigationView.Header>
                <dev:BreadcrumbNavigator x:ConnectionId='4' x:Name="BreadCrumbNav" />
            </NavigationView.Header>
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='5' x:Name="AdminMenuItem" Content="Admin Tools" Icon="Admin"
                                    Visibility="Collapsed"/>
            </NavigationView.MenuItems>
            <Frame x:ConnectionId='6' x:Name="NavFrame" />
