<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Pascal.Views.PdfEditPages.PdfMergePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pascal.Views.PdfEditPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dev="using:DevWinUI"
    xmlns:toolkit="using:CommunityToolkit.WinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="SettingsCardSpacing">4</x:Double>

        <Style x:Key="SettingsSectionHeaderTextBlockStyle"
           BasedOn="{StaticResource BodyStrongTextBlockStyle}"
           TargetType="TextBlock">
            <Style.Setters>
                <Setter Property="Margin" Value="1,30,0,6" />
            </Style.Setters>
        </Style>
    </Page.Resources>

    <Grid x:Name="ContentArea" MaxWidth="1064">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel dev:PanelAttach.ChildrenTransitions="Default" Spacing="12">
            <TextBlock x:Name="PageHeader"
                   Margin="{ThemeResource PageHeaderMargin}"
                   Padding="{ThemeResource PageHeaderPadding}"
                   Style="{StaticResource TitleTextBlockStyle}"
                   AutomationProperties.HeadingLevel="Level1"
                   Text="PDF 병합하기" />

            <TextBlock x:Name="PageDescription"
                   Margin="{ThemeResource PageDescriptionMargin}"
                   Padding="{ThemeResource PageDescriptionPadding}"
                   Style="{StaticResource CaptionTextBlockStyle}"
                   AutomationProperties.HeadingLevel="Level1"
                   Text="여러 PDF 문서를 하나의 파일로 합칠 수 있습니다." />
        </StackPanel>

        <ScrollView VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel dev:PanelAttach.ChildrenTransitions="Default" Spacing="5"
                        Margin="{ThemeResource PageContentMargin}"
                        Padding="{ThemeResource PageContentPadding}">

                <CommandBar Background="Transparent" IsOpen="False" DefaultLabelPosition="Right">
                    <AppBarButton x:Name="PickPdfFilesButton"
                                  Icon="Add" Label="불러오기"
                                  Click="PickPdfFilesButton_Click"/>
                    <AppBarButton  x:Name="SaveAMergedPdfFileButton"
                                  Icon="Save" Label="저장하기"
                                  Click="SaveAMergedPdfFileButton_Click"/>
                </CommandBar>

                <ListView CanReorderItems="True" CanDragItems="True"
                          AllowDrop="True" BorderThickness="1"
                          BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListViewItem>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" /> <!--Checked="TwoState_Checked" Unchecked="TwoState_Unchecked"-->

                            <HyperlinkButton Grid.Column="1" Content="pdf_files1.pdf" />

                            <toolkit:RangeSelector Grid.Column="3" Width="220"
                                                   VerticalAlignment="Center"
                                                   ThumbDragStarted="Selector_OnDragStarted"
                                                   ThumbDragCompleted="Selector_OnDragCompleted"/>
                        </Grid>
                    </ListViewItem>

                    <ListViewItem>
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <HyperlinkButton Grid.Column="0" Content="pdf_files2.pdf" />

                            <toolkit:RangeSelector Grid.Column="2" Width="220"
                                                   VerticalAlignment="Center"
                                                   ThumbDragStarted="Selector_OnDragStarted"
                                                   ThumbDragCompleted="Selector_OnDragCompleted"/>
                        </Grid>
                    </ListViewItem>
                </ListView>

                <Grid Height="1000" Margin="{ThemeResource PageContentMargin}" Padding="{ThemeResource PageContentPadding}">
                    <WebView2 x:Name="PdfWebView2"
                              Source="https://learn.microsoft.com/windows/apps/winui/winui3/"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              MinHeight="1000" MinWidth="600"
                              Visibility="Collapsed" />

                    <!--<dev:Shimmer x:Name="LoadingShimmer"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Canvas.ZIndex="1"
                                 IsHitTestVisible="False"/>-->
                </Grid>

            </StackPanel>
        </ScrollView>
    </Grid>
</Page>